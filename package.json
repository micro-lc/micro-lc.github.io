{
  "name": "documentation",
  "version": "2.0.0",
  "description": "micro-lc & add-ons documentation",
  "license": "SEE LICENSE IN LICENSE",
  "packageManager": "yarn@3.3.1",
  "workspaces": [
    "applications/*"
  ],
  "scripts": {
    "cleanup": "rimraf build node_modules static/applications applications/**/build applications/**/node_modules",
    "rbr": "yarn workspace @micro-lc/react-browser-router",
    "rhr": "yarn workspace @micro-lc/react-hash-router",
    "cspell": "cspell \"./docs/**\"",
    "lint:code": "eslint . --ext .mjs,.js,.jsx,.ts,.tsx --resolve-plugins-relative-to .",
    "lint:style": "stylelint \"**/*.{css}\" --allow-empty-input",
    "lint": "NODE_OPTIONS=--max-old-space-size=10000 yarn run-p lint:code lint:style",
    "build-applications": "yarn workspaces foreach --parallel --from '@micro-lc/*' run build",
    "build-docusaurus": "docusaurus build",
    "copy-static": "ts-node scripts/copy-static.ts",
    "prepare": "run-s build-applications copy-static",
    "start": "docusaurus start",
    "build": "run-s prepare build-docusaurus",
    "serve": "docusaurus serve",
    "check:types": "yarn tsc --noEmit && echo \"âœ“ check types\"",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@docusaurus/core": "^2.2.0",
    "@docusaurus/plugin-content-blog": "^2.2.0",
    "@docusaurus/plugin-content-docs": "^2.2.0",
    "@docusaurus/plugin-content-pages": "^2.2.0",
    "@docusaurus/theme-classic": "^2.2.0",
    "@docusaurus/theme-common": "^2.2.0",
    "@mdx-js/react": "1.6.22",
    "clsx": "^1.2.1",
    "prism-react-renderer": "^1.3.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@cspell/cspell-types": "^6.18.0",
    "@docusaurus/module-type-aliases": "^2.2.0",
    "@tsconfig/docusaurus": "^1.0.6",
    "@types/eslint": "^8.4.10",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "@types/node": "^18.11.17",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "confusing-browser-globals": "^1.0.11",
    "copy-webpack-plugin": "^11.0.0",
    "cspell": "^6.18.0",
    "eslint": "^8.30.0",
    "eslint-config-esnext": "^4.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "eslint-visitor-keys": "^3.3.0",
    "fs-extra": "^11.1.0",
    "glob": "^8.0.3",
    "husky": "^8.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "stylelint": "^14.16.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=16.17.0"
  }
}
